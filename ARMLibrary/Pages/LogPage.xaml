<Page x:Class="ARMLibrary.Pages.LogPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:ARMLibrary.Pages"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="LogPage">

    <Grid>
        <StackPanel Orientation="Vertical" HorizontalAlignment="Center" VerticalAlignment="Center">
            <StackPanel Orientation="Horizontal" Margin="10">
                <TextBlock Text="Login" Margin="5 5 25 5"/>
                <TextBox Width="150" x:Name="LoginTB"/>
            </StackPanel>
            <StackPanel Orientation="Horizontal" Margin="10">
                <TextBlock Text="Password" Margin="5"/>
                <TextBox Width="150" x:Name="PasswordTB"/>
            </StackPanel>
            <Button Content="Вход" Width="150" Margin="5" Click="LogButton_Click"/>
            <Button Content="Регистрация" x:Name="RegBT" Width="150" Margin="5" Click="RegBT_Click"/>
        </StackPanel>
    </Grid>
</Page>
