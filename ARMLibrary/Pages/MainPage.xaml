<Page x:Class="ARMLibrary.Pages.MainPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:ARMLibrary.Pages"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="MainPage">

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="1.5*"/>
            <RowDefinition Height="10*"/>
        </Grid.RowDefinitions>
        <StackPanel Orientation="Horizontal" HorizontalAlignment="Center" VerticalAlignment="Center">
            <Button Height="50" Width="60" Margin="5" Background="Transparent" BorderBrush="Transparent">
                <TextBlock Text="Книги" />
            </Button>
            <Button Height="50" Width="60" Margin="5" Background="Transparent" BorderBrush="Transparent">
                <TextBlock Text="Читатели" />
            </Button>
            <Button Height="50" Width="50" Margin="5" Background="Transparent" BorderBrush="Transparent">
                <TextBlock Text="Книги" />
            </Button>
        </StackPanel>
        <Button Background="Transparent" HorizontalAlignment="Right" BorderBrush="Transparent" Margin="15">
            <TextBlock Text="Аккаунт"/>
        </Button>
    </Grid>
</Page>
